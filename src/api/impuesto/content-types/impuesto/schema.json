{
  "kind": "collectionType",
  "collectionName": "Impuesto",
  "info": {
    "singularName": "Impuesto",
    "pluralName": "Impuestos",
    "displayName": "Impuesto",
    "description": "Variables de los impuestos (IVA, ISC, etc.)"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 100
    },
    "rate": {
      "type": "decimal",
      "required": true,
      "default": 0.00,
      "description": "Ratio de Impuestos , e.g., 0.15 for 15%."
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "IVA",
        "ISC",
        "Otro"
      ],
      "required": true,
      "description": "Tipo de impuesto."
    },
    "appliesTo": {
      "type": "enumeration",
      "enum": [
        "Product",
        "Service",
        "All"
      ],
      "required": true
    },
    "products": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product",
      "mappedBy": "taxes"
    }
  }
}